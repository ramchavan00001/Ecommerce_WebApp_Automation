

<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Ecommerce Automation Suite" parallel="tests" thread-count="2">
	<listeners>
        <listener class-name="ramchavantestautomation.Base.TestListener"/>
    </listeners>
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="ramchavantestautomation.Tests.LoginPageTest"/>
            <class name="ramchavantestautomation.Tests.SampleUnitTest"/>
        </classes>
    </test>

    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="ramchavantestautomation.Tests.LoginPageTest"/>
            <class name="ramchavantestautomation.Tests.SampleUnitTest"/>
        </classes>
    </test>

</suite>
